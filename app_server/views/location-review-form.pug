extends layout

block content
  .row.banner.border-bottom.mb-4
    .col-12
      h1 Add review

  .row
    .col-12.col-md-8
      form(action=`/location/${locationId}/review/new`, method="post", role="form")
        .form-group.row.m-2
          label.col-10.col-sm-2.col-form-label(for="author") Name
          .col-12.col-sm-10
            input#author.form-control(name="author", required)
        .form-group.row.m-2
          label.col-10.col-sm-2.col-form-label(for="rating") Rating
          .col-12.col-sm-2
            select#rating.form-control.input-sm(name="rating")
              option(value="5") 5
              option(value="4") 4
              option(value="3") 3
              option(value="2") 2
              option(value="1") 1
        .form-group.row.m-2
          label.col-10.col-sm-2.col-form-label(for="reviewText") Review
          .col-sm-10
            textarea#reviewText.form-control(name="reviewText", rows="5", required)
        button.btn.btn-primary.float-end Add my review

    .col-12.col-md-4
